<div>
  <div class="border">
    <h2 class="text-center" data-id="{{posts.id}}">{{posts.post_title}}</h2>
    <p>{{posts.post_body}}</p>
    <p class="text-right side-note mb-0">Created by
      {{posts.user.name}}
      on
      {{format_date posts.post_date}}</p>
  </div>
  {{#if logged_in}}
    <form class="form newCommentForm">
      <div class="form-group">
        <label for="comment_body">Comment:</label>
        <textarea
          class="form-input"
          id="comment_body"
          name="comment_body"
        ></textarea>
      </div>
      <div class="form-group">
        <button
          type="submit"
          id="submitbtn"
          data-id="{{posts.id}}"
          class="btn btn-primary"
        >Submit</button>
      </div>
    </form>
  {{/if}}
  {{#if posts.comments.length}}
    <div class="border mt-3">
      <h3 class="sessionUserId" data-id="{{sessionUserId}}">Comments:</h3>
      {{#each posts.comments as |comment|}}
        <div class="comment">
          <p>{{comment.comment_body}}</p>
          <div class="display-flex justify-space-between align-center">
            <button
              type="submit"
              class="btn btn-primary deletebtn"
              data-id="{{comment.id}},{{comment.user_id}}"
            >Delete
            </button>
            <div class="side-note text-right">
              <span>{{comment.user.name}}</span>
              on
              {{format_date comment.comment_date}}
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src="/js/deletingComment.js"></script>
{{#if logged_in}}
  <script src="/js/addingComment.js"></script>
{{/if}}